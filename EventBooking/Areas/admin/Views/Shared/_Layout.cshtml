<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event Booking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h4 class="text-center mb-4">Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Event" asp-action="List">
                        <i class="fas fa-calendar-alt me-2"></i> Manage Events
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Event" asp-action="Edit">
                        <i class="fas fa-plus-circle me-2"></i> Create Event
                    </a>
                </li>
                <li class="nav-item mt-5">
                    <a class="nav-link text-white" asp-controller="Users" asp-action="LoginOut" asp-area="">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <header class="mb-4">
                <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">Event Booking</a>
                        <div class="navbar-nav ms-auto">
                            <span class="nav-link">Welcome, @User.Identity.Name</span>
                        </div>
                    </div>
                </nav>
            </header>
            <main class="container-fluid">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
