@model List<VwEvent>
@{
    ViewData["Title"] = "Manage Events";
}
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Events List</h5>
        <a asp-controller="Event" asp-action="Edit" class="btn btn-light btn-sm"><i class="fas fa-plus me-2"></i>Create New Event</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Venue</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Event in Model)
                    {
                        <tr>
                            <td>@Event.Name</td>
                            <td>@Event.Date.ToString("MMM dd, yyyy")</td>
                            <td>@Event.Venue</td>
                            <td>$@Event.Price.ToString("F2")</td>
                            <td>@Event.CategoryName</td>
                            <td>
                                <a asp-action="Edit" asp-route-eventId="@Event.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-eventId="@Event.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
    }
                </tbody>
            </table>
        </div>
    </div>
</div>











