@model EventDetailsModel

<div class="bg-white rounded-lg shadow-lg p-6 max-w-4xl mx-auto">
    <div class="flex flex-col md:flex-row">
        <div class="md:w-1/2">
            <img src="~/Uploads/Events/@Model.ImageUrl" alt="@Model.Name" class="w-full h-64 object-cover rounded-lg">
        </div>
        <div class="md:w-1/2 md:pl-6 mt-4 md:mt-0">
            <h1 class="text-3xl font-bold text-gray-800">@Model.Name</h1>
            <p class="text-gray-600 mt-4">@Model.Description</p>
            <p class="text-gray-500 mt-2"><strong>Category:</strong> @Model.CategoryName</p>
            <p class="text-gray-500"><strong>Date:</strong> @Model.Date.ToString("MMMM dd, yyyy")</p>
            <p class="text-gray-500"><strong>Venue:</strong> @Model.Venue</p>
            <p class="text-gray-500"><strong>Price:</strong> $@Model.Price</p>
            <a asp-controller="Booking" asp-action="AddToCart"
               asp-route-eventId="@Model.EventId" class="inline-block bg-blue-600 text-white px-4 py-2 mt-4 rounded-full hover:bg-blue-700">
                Book Now
            </a>
           
        </div>
    </div>
</div>
