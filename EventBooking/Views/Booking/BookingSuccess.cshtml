@model EventCart

<div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-6">
    <div class="text-center mb-6">
        <h1 class="text-4xl font-bold text-green-600">Congratulations!</h1>
        <p class="text-gray-600 mt-4">Your booking has been confirmed.</p>
    </div>

    @if (Model.lstEvents == null || !Model.lstEvents.Any())
    {
        <p class="text-center text-gray-600">No events in your booking.</p>
    }
    else
    {
        <div class="space-y-4">
            <h2 class="text-xl font-semibold text-gray-800">Booked Events</h2>
            <div class="border-t border-gray-200">
                @foreach (var item in Model.lstEvents)
                {
                    <div class="flex justify-between items-center py-4 border-b border-gray-200">
                        <div>
                            <h3 class="text-lg font-medium text-gray-800">@item.EventName</h3>
                            <p class="text-gray-600">Tickets: @item.Qty</p>
                        </div>
                        <p class="text-gray-800 font-medium">$@item.Price</p>
                    </div>
                }
            </div>
            <div class="flex justify-between items-center pt-4">
                <h3 class="text-lg font-semibold text-gray-800">Total</h3>
                <p class="text-xl font-bold text-gray-800">$@Model.Total</p>
            </div>
        </div>
    }

    <div class="text-center mt-6">
        <a href="@Url.Action("Index", "Home")" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-full hover:bg-blue-700">Back to Home</a>
    </div>
</div>













